<div class="container">
  <div class="row">
    <div class="card">
      <%= image_tag(@product.image.variant(resize_to_fill: [360, 360]), class: "img-fluid") if @product.image.attached? %>
      <div class="card-body">
        <h3 class="card-title"><%= @product.name %></h3>
        <%= form_for @order_item, remote: true do |f| %>
          <p class="card-text"> Unit Price: <%= number_to_currency @product.price %></p>
          <div class="input-group mb-3">
            <%= f.number_field :quantity, value: 1, class: "form-control", min: 1  %>
            <div class="input-group-append">
              <%= f.hidden_field :product_id, value: @product.id %>
              <%= f.submit "Add to Cart", class: "btn btn-outline-primary" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
