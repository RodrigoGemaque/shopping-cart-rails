<% if user_signed_in? %>
  <ul class="navbar-nav">
    <li class="nav-item dropdown">
      <%= link_to current_user.email, "#", class: "nav-link dropdown-toggle", role: "button", "data-toggle": "dropdown" %>
      <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
        <%= link_to 'Edit profile', edit_user_registration_path, :class => 'dropdown-item' %>
        <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'dropdown-item' %>
      </div>
    </li>
  </ul>
<% else %>
  <%= link_to "Sign up", new_user_registration_path, class: "btn btn-outline-primary mx-1", role: "button" %>
  <%= link_to "Login", new_user_session_path, class: "btn btn-primary", role: "button" %>
<% end %>